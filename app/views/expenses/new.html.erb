<h1>Create New Expense</h1>

<%= form_for(:expense, url: expenses_path , local: true) do |f| %>

  <% if @expense.errors.any? %>
    <% @expense.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"> <%= msg %> </div>
    <% end %>
  <% end %>

  <%= f.label :Name %>
  <%= f.text_field :name %>
  <br><br>

  <%= f.label :Category %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  <br><br>

  <%= f.label :Amount %>
  <%= f.text_field :amount %>
  <br><br>

  <%= f.label :Time %>
  <%= f.text_field :start_time %>
  <br><br>

  <%= f.submit %>
<% end %>
<br>
<%= form_tag(import_data_expenses_path, multipart: true) do %>

  <% if !flash[:notice].blank? %>
    <div class="alert alert-secondary" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= file_field_tag :xlsx_file %>
  <%= submit_tag 'Import Data as excel' %>
<% end %>
<br>
<%=form_tag import_expenses_path, multipart: true do %>
  <%=flash[:notice]%>
  <%=file_field_tag :file%>
  <%=submit_tag 'Import Data as CVS'%>
<%end%>
