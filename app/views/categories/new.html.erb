<h1>Create New Category</h1>

<%= form_for(:category, url: categories_path , local: true) do |f| %>

  <% if @category.errors.any? %>
  <% @category.errors.full_messages.each do |msg| %>
<div class="alert alert-danger"> <%= msg %> </div>
<% end %>
<% end %> 

  <%= f.label :Name %>
  <%= f.text_field :name %>
<br><br>

  <%= f.submit %>
<% end %>